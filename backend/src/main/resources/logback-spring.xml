<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Ensure MDC contains traceId/spanId from Micrometer Tracing -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [traceId=%mdc{traceId}, spanId=%mdc{spanId}] [%t] %c{1} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>